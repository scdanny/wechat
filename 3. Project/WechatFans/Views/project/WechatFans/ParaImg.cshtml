@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{

}

<style>
    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }
    .textLeft {
        text-align: left;
        text-indent: 50px;
    }
</style>

<div>
    @{
        if (Sitecore.Context.PageMode.IsPreview)
        {
            <img src="@Html.Sitecore().Field("mediaurl", new { @class = "center",disableWebEdit = true })" />
        }
        else
        {
            @Html.Sitecore().Field("pimage", new { @class = "center", mw = 500, mh = 333 })
        }
    }

    <br />
    <div class="textLeft">
        @Html.Sitecore().Field("ptext")
    </div>

</div>